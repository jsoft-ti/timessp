        android:layout_height="wrap_content"
        android:text="Escolha seu time" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Corinthians"
        android:id="@+id/btnCorinthians"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SÃ£o Paulo"
        android:id="@+id/btnSaoPaulo"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Santos"
        android:id="@+id/btnSantos"
        android:onClick="abrirSantos"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Palmeiras"
        android:id="@+id/btnPalmeiras"
